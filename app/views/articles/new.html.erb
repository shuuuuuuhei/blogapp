<div class="container">
    <ul>
        <% @article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    <%= form_with(model: @article, url: articles_path, method:  'post' , local: true) do |f| %>
        <div>
            <%= f.label 'タイトル'%>
        </div>
        <div>
            <%= f.text_field :title , class: 'text'%>
        </div>
        <div>
            <%= f.label '内容'%>
        </div>
        <div>
            <%= f.text_area :content %>
        </div>
        <%= f.submit '保存' , class: 'btn-primary'%>
    <% end %>
</div>